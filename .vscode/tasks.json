{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker:infra-up",
      "type": "shell",
      "command": "docker compose -f deploy/docker-compose.yml up -d db redis",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "build AuthService",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/AuthService/AuthService.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build ItemService",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/ItemService/ItemService.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build ApiGateway",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/ApiGateway/ApiGateway.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "prelaunch:AuthService",
      "dependsOn": [
        "docker:infra-up",
        "build AuthService"
      ],
      "problemMatcher": []
    },
    {
      "label": "prelaunch:ItemService",
      "dependsOn": [
        "docker:infra-up",
        "build ItemService"
      ],
      "problemMatcher": []
    },
    {
      "label": "prelaunch:ApiGateway",
      "dependsOn": [
        "docker:infra-up",
        "build ApiGateway"
      ],
      "problemMatcher": []
    }
  ]
}
