{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "AuthService (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "prelaunch:AuthService",
      "program": "${workspaceFolder}/.build/bin/AuthService/Debug/net8.0/AuthService.dll",
      "cwd": "${workspaceFolder}/src/AuthService",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7135;http://localhost:5079",
        "ConnectionStrings__DefaultConnection": "Host=localhost;Port=5433;Database=postgres;Username=postgres;Password=postgres",
        "DevAuth__Enabled": "true"
      }
    },
    {
      "name": "ItemService (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "prelaunch:ItemService",
      "program": "${workspaceFolder}/.build/bin/ItemService/Debug/net8.0/ItemService.dll",
      "cwd": "${workspaceFolder}/src/ItemService",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7267;http://localhost:5111",
        "Redis__Connection": "localhost:6379",
        "Redis__InstanceName": "cs_shop_"
      }
    },
    {
      "name": "ApiGateway (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "prelaunch:ApiGateway",
      "program": "${workspaceFolder}/.build/bin/ApiGateway/Debug/net8.0/ApiGateway.dll",
      "cwd": "${workspaceFolder}/src/ApiGateway",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7245;http://localhost:5166"
      }
    }
  ],
  "compounds": [
    {
      "name": "Backend (All Services)",
      "configurations": [
        "AuthService (Debug)",
        "ItemService (Debug)",
        "ApiGateway (Debug)"
      ]
    }
  ]
}
