{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "AuthService (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "prelaunch:AuthService",
      "program": "${workspaceFolder}/AuthService/bin/Debug/net6.0/AuthService.dll",
      "cwd": "${workspaceFolder}/AuthService",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7135;http://localhost:5079",
        "ConnectionStrings__DefaultConnection": "Host=localhost;Port=5433;Database=postgres;Username=postgres;Password=postgres",
        "Jwt__SecretKey": "dev_secret_key_32_chars_minimum!!",
        "Jwt__Issuer": "cs-shop-auth",
        "Jwt__Audience": "cs-shop-frontend",
        "Jwt__ExpireDays": "5",
        "DevAuth__Enabled": "true"
      }
    },
    {
      "name": "ItemService (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "prelaunch:ItemService",
      "program": "${workspaceFolder}/ItemService/bin/Debug/net6.0/ItemService.dll",
      "cwd": "${workspaceFolder}/ItemService",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7267;http://localhost:5111",
        "Redis__Connection": "localhost:6379",
        "Redis__InstanceName": "cs_shop_",
        "JWT_SECRET_KEY": "dev_secret_key_32_chars_minimum!!",
        "JWT_ISSUER": "cs-shop-auth",
        "JWT_AUDIENCE": "cs-shop-frontend"
      }
    },
    {
      "name": "ApiGateway (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "prelaunch:ApiGateway",
      "program": "${workspaceFolder}/ApiGateway/bin/Debug/net6.0/ApiGateway.dll",
      "cwd": "${workspaceFolder}/ApiGateway",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7245;http://localhost:5166",
        "JWT_SECRET_KEY": "dev_secret_key_32_chars_minimum!!",
        "JWT_ISSUER": "cs-shop-auth",
        "JWT_AUDIENCE": "cs-shop-frontend"
      }
    }
  ],
  "compounds": [
    {
      "name": "Backend (All Services)",
      "configurations": [
        "AuthService (Debug)",
        "ItemService (Debug)",
        "ApiGateway (Debug)"
      ]
    }
  ]
}
